 <div class="box-body">

  <div class="form-group col-xs-12">
    <%= f.label :name, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :power, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :power, class:"form-control", max: 6, min: 1, disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :shield, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= f.check_box :shield, class:"form-control" ,disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :detail, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :detail, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

</div>

<div class="box-footer">
  <%= f.submit 'Submit', :class => 'btn btn-success pull-right' if !fields_disabled %>
</div>
