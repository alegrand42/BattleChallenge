 <div class="box-body">


  <div class="form-group col-xs-12">
    <%= f.label :name, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :hp, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :hp, class:"form-control", max: 10, min: 1, disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :attack, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :attack, class:"form-control", max: 6, min: 1, disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :armor, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :armor, class:"form-control", max: 6, min:1, disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :background, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :background, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :weapons, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= f.select(:weapon_ids, @weapons.collect {|a| [a.name, a.id]}, {:prompt => "Please select"}, id: "select_weapon_ids", class: "select2 full-width", :multiple => true, :size => 3) %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :level, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :level, class:"form-control", min: 1, disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :exp, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :exp, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :win_count, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :win_count, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :lose_count, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :lose_count, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

</div>

<div class="box-footer">
  <%= f.submit 'Submit', :class => 'btn btn-success pull-right' if !fields_disabled %>
</div>
