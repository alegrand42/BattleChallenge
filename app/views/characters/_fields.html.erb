 <div class="box-body">


  <div class="form-group col-xs-12">
    <%= f.label :name, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :hp, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :hp, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :attack, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :attack, class:"form-control", disabled: fields_disabled %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :armor, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :armor, class:"form-control", max: 6, min:1, disabled: fields_disabled %>
    </div>
  </div>

</div>

<div class="box-footer">
  <%= f.submit 'Submit', :class => 'btn btn-success pull-right' if !fields_disabled %>
</div>
