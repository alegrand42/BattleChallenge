 <div class="box-body">

  <div class="form-group col-xs-12">
    <%= f.label :player_one, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:player_one_id, @characters, :id, :name, {:include_blank => 'Select the first player'}, class:"form-control select2 full-width") %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :player_two, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:player_two_id, @characters, :id, :name, {:include_blank => 'Select the second player'}, class:"form-control select2 full-width") %>
    </div>
  </div>

</div>

<div class="box-footer">
  <%= f.submit 'Submit', :class => 'btn btn-success pull-right' if !fields_disabled %>
</div>
